{
  "name": "jsp-to-spring-boot",
  "version": "1.0.0",
  "description": "AI-powered CLI tool for converting Java + JSP projects to Java + Spring Boot",
  "main": "src/index.js",
  "bin": {
    "jsp2spring": "src/cli.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "jest --config=jest.config.json",
    "test:watch": "jest --config=jest.config.json --watch",
    "test:coverage": "jest --config=jest.config.json --coverage",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "dev": "nodemon src/cli.js",
    "build": "echo 'No build step required for Node.js CLI tool'"
  },
  "keywords": [
    "jsp",
    "spring-boot",
    "java",
    "conversion",
    "ai-agent",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "puppeteer": "^24.12.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10"
  }
}
